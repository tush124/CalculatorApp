<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.silverglobesoft.www.calculatorsg.MainActivity"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/textViewNumberExpression"
        android:layout_height="80dp"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:typeface="normal"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        android:gravity="right"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textIsSelectable="true"
        android:lines="1"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/textViewNumberExpression"
        android:id="@+id/textViewResult"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="right"
        android:textSize="25sp"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
        android:textStyle="normal|italic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight=".33"
                    android:id="@+id/buttonNumberOne"
                    android:text="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@android:color/black" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight=".33"
                    android:id="@+id/buttonNumberTwo"
                    android:text="2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@android:color/black" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight=".33"
                    android:id="@+id/buttonNumberThree"
                    android:text="3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@android:color/black" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight=".33"
                    android:id="@+id/buttonNumberFour"
                    android:text="4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@android:color/black" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight=".33"
                    android:id="@+id/buttonNumberFive"
                    android:text="5"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@android:color/black" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight=".33"
                    android:id="@+id/buttonNumberSix"
                    android:text="6"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight=".33"
                    android:id="@+id/buttonNumberSeven"
                    android:text="7"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@android:color/black" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight=".33"
                    android:id="@+id/buttonNumberEight"
                    android:text="8"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@android:color/black" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight=".33"
                    android:id="@+id/buttonNumberNine"
                    android:text="9"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight=".33"
                    android:id="@+id/buttonDot"
                    android:text="."
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@android:color/black" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight=".33"
                    android:id="@+id/buttonZero"
                    android:text="0"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@android:color/black" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight=".33"
                    android:id="@+id/buttonClear"
                    android:text="CLR"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:id="@+id/buttonEqaul"
                    android:text="="
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@android:color/black"
                    android:textSize="36sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:id="@+id/buttonDelete"
                android:text="DEL"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:id="@+id/buttonDivide"
                android:text="/"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:id="@+id/buttonMultiply"
                android:text="*"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:id="@+id/buttonMinus"
                android:text="-"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:id="@+id/buttonPlus"
                android:text="+"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
